{
  "openapi": "3.0.1",
  "info": {
    "title": "Common Project",
    "version": "0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8000/",
      "description": "Development Server (Local)"
    }
  ],
  "paths": {
    "/user/current": {
      "get": {
        "tags": ["user", "current"],
        "description": "Get logged in user's information.",
        "operationId": "currentUser",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentUser"
                }
              }
            }
          },
          "401": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "x-swagger-router-controller": "user"
    },
    "/user/login": {
      "post": {
        "tags": ["user"],
        "description": "The endpoint for authentication.",
        "operationId": "login",
        "requestBody": {
          "description": "Log into the system",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginParams"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResult"
                }
              }
            }
          },
          "401": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "x-codegen-request-body-name": "body"
      },
      "x-swagger-router-controller": "user"
    },
    "/user/logout": {
      "post": {
        "tags": ["user", "logout"],
        "description": "The endpoint for logging out.",
        "operationId": "logout",
        "requestBody": {
          "description": "Logs someone out of the system",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginParams"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResult"
                }
              }
            }
          },
          "401": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "x-codegen-request-body-name": "body"
      },
      "x-swagger-router-controller": "user"
    }
  },
  "components": {
    "schemas": {
      "CurrentUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "signature": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "group": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                }
              }
            }
          },
          "notifyCount": {
            "type": "integer",
            "format": "int32"
          },
          "unreadCount": {
            "type": "integer",
            "format": "int32"
          },
          "country": {
            "type": "string"
          },
          "access": {
            "type": "string"
          }
        }
      },
      "LoginResult": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Flag for retrieving falsiness"
          },
          "email": {
            "type": "string"
          },
          "groups": {
            "type": "object",
            "description": "Role groups the user belongs to"
          },
          "isAdmin": {
            "type": "boolean"
          }
        }
      },
      "LoginParams": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "required": ["errorCode"],
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Flag for retrieving falsiness"
          },
          "errorMessage": {
            "type": "string",
            "description": "Error contents from the relevant system"
          }
        }
      }
    }
  }
}
